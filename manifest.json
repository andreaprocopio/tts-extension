{
  "manifest_version": 2,
  "name": "TTS Extension development",
  "version": "1.0",
  "description": "Reads the text that you click on.",
  "permissions": ["activeTab", "tts", "tabs", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "scripts": ["content.js"]
  },
  "web_accessible_resources": ["popup.html", "popup.js"]
}
